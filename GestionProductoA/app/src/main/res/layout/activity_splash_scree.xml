<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashimg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#23D1D9"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="75dp"
        android:scaleType="center"
        app:srcCompat="@mipmap/smart_launcher"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/splashtxt"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="12dp"
        android:text="Gestiona eficientemente tus productos"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        android:textSize="@dimen/text_size_standard"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:layout_alignRight="@id/splashtxt"
        android:textSize="@dimen/text_size_small"
        android:text="Jonathan Tillaguango"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:visibility="visible"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="473dp" />
</RelativeLayout>